{
  "name": "agent-browser-mcp",
  "version": "0.1.0",
  "description": "MCP server for browser automation powered by agent-browser",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "agent-browser-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "postinstall": "node scripts/postinstall.js"
  },
  "keywords": [
    "mcp",
    "browser",
    "automation",
    "playwright",
    "agent"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/quantmew/agent-browser-mcp.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "playwright-core": "^1.57.0",
    "ws": "^8.19.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.1",
    "prettier": "^3.7.4",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
